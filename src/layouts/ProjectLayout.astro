      </section>

      <section class="flex h-[100vw] w-[100vw] sm:h-[100vh] sm:w-[100vh] aspect-square bg-blue-700" data-slider-gl data-type="image" data-bg="">

        {frontmatter.square_image?.square_image_media && (
          <Media src={frontmatter.square_image.square_image_media} alt={frontmatter.title} cssClasses="w-screen h-screen max-w-fit	 " />

---
interface Props {
  imgSrc: string;
  cssOut: string;
  cssMid: string;
  cssInner: string;
  link: string;
  type: string;
  slug?: string; // Made optional
  altText: string;
  dataSpeed?: string; // Made optional
}

const { imgSrc, altText, dataSpeed, cssOut, cssMid, cssInner, slug, link, type } = Astro.props;
---

<div
  class={`${cssOut} cursor-pointer z-10`}
  {...(dataSpeed && { 'data-speed': dataSpeed })}  
  {...{ [type]: true }}  
  data-link
  data-sticky
>
  <div class={`${cssMid} w-24 h-24 sm:w-28 sm:h-28 xl:w-32 xl:h-32 2xl:w-52 2xl:h-52`}>
    <div class={`${cssInner} `}>
      <a href={link} {...(slug && { 'data-project-name': slug })} class="h-full w-full flex items-center justify-center"> 
        <img src={imgSrc} alt={altText} />
      </a>
    </div>
  </div>
</div>